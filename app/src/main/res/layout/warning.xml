<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView

            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="?android:attr/alertDialogIcon"
            android:id="@+id/imageView"/>
    <TextView
            android:text="@string/valid_e_mail"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/valid_email"/>
    <Button
            android:text="@string/close"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_cl_mail_warning"/>
</LinearLayout>