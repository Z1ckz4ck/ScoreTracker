<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lv_users"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/lv_item_user_firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:hint="@string/txtFirstname"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:textStyle="bold"
        android:focusable="false"></TextView>


    <TextView
        android:id="@+id/lv_item_user_lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_weight="1"
        android:focusable="false"
        android:gravity="center_vertical"
        android:hint="@string/txtLastname"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:textStyle="bold"
        ></TextView>

    <ImageButton
        android:id="@+id/btn_configUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:src="@drawable/config2_24_24" />


</LinearLayout>